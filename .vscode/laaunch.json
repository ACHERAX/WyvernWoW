{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ (Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/__build_win32_debug/Debug/Guard.exe",
            "args": ["gcc", "--version"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true
        },        
        {
            "name": "C++ (MinGW) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/__build_mingw32_debug/Guard.exe",
            "args": ["gcc", "--version"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true,
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "C:/tools/mingw64/bin/gdb.exe",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        },
        {
            "name": "C++ (Shell) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/mnt/c/Temp/guard/__build_debug/Guard",
            "args": [],
            "stopAtEntry": false,
            "cwd": "/mnt/c/Temp/guard/__build_debug",
            "environment": [],
            "externalConsole": false,            
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }, 
            "pipeTransport": {
                "pipeCwd": "${workspaceRoot}",
                "pipeProgram": "C:\\Windows\\System32\\bash.exe",
                "pipeArgs": ["-c"],
                "debuggerPath": "/usr/bin/gdb"
            },
            "sourceFileMap": {
                "/mnt/c": "c:\\"
            },
            "logging": {

                "engineLogging": true,
                "trace": true
            }            
        },        
        {
            "name": "C++ (Shell) Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "/mnt/c/Temp/guard/__build_debug/Guard",
            "processId": "${command:pickRemoteProcess}",
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "pipeTransport": {
                "pipeCwd": "${workspaceRoot}",
                "pipeProgram": "C:\\Windows\\System32\\bash.exe",
                "pipeArgs": ["-c"],
                "debuggerPath": "/usr/bin/gdb"
            },
            "sourceFileMap": {
                "/mnt/c": "c:\\"
            },
            "logging": {

                "engineLogging": true,
                "trace": true
            }              
        } 
    ]
}